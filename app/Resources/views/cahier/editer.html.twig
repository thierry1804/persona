{{ form_start(form, { 'action': path('editer-cahier', {'id': cahier.id}) }) }}
<input type="hidden" name="id" value="{{ cahier.id }}" />
<div class="form-group row">
    {{ form_label(form.numero, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.numero) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.titre, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.titre) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.objectif, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.objectif) }}
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.prerequis, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        <ul class="prerequis list-group" data-prototype="{{ form_widget(form.prerequis.vars.prototype)|e('html_attr') }}">
            {% for prerequi in form.prerequis %}
                <li class="list-group-item p-1">
                    <div class="input-group">
                        {{ form_widget(prerequi.item) }}
                        <div class="input-group-append">
                            <button type="button" class="btn btn-danger btn-sm remove-prerequis">&times;</button>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="form-group row">
    {{ form_label(form.initialisation, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
    <div class="col-sm-10">
        {{ form_widget(form.initialisation) }}
    </div>
</div>
<div class="form-group row">
    <div class="col-sm-12">
        <ul class="batteries list-group" data-prototype="{{ form_widget(form.batteries.vars.prototype)|e('html_attr') }}">
            {% for batterie in form.batteries %}
                <li class="list-group-item p-1">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text">#{{ loop.index }}</span>
                        </div>
                        {{ form_widget(batterie.donneesEntrees) }}
                        {{ form_widget(batterie.comportementAttendu) }}
                        <div class="input-group-append">
                            <button type="button" class="btn btn-danger btn-sm remove-batterie">&times;</button>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>
<div class="d-none">
    {{ form_rest(form) }}
</div>
{{ form_end(form) }}

<script type="text/javascript" language="javascript" src="{{ asset("js/prerequis.js") }}?date={{ "now"|date('YmdHis') }}"></script>
<script type="text/javascript" language="javascript" src="{{ asset("js/batteries.js") }}?date={{ "now"|date('YmdHis') }}"></script>